load("@bazel_tools//tools/build_defs/repo:git.bzl", "git_repository")

# This is a fake repository - `override-repository` handles this in practice
git_repository(
    name = "rules_pods",
    remote = "https://github.com/pinterest/PodToBUILD.git",
    branch = "master",
)

